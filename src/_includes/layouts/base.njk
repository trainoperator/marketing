<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title or site.meta.title }}</title>
  <meta name="description" content="{{ description or site.meta.description }}">
  <meta name="theme-color" content="{{ site.colors.accent }}">
  <link rel="icon" href="/assets/logo.svg" type="image/svg+xml">
  <link rel="mask-icon" href="/assets/logo.svg" color="{{ site.colors.accent }}">
  <link rel="preload" href="/assets/styles/main.css" as="style">
  <link rel="stylesheet" href="/assets/styles/main.css">
</head>
<body>
  <header class="site-header">
    <div class="container header-inner">
      <a href="/" class="brand">
        <img src="/assets/logo.svg" alt="{{ site.name }} logo" width="300em" decoding="async" />
      </a>
      <nav class="nav">
        <a href="/">Home</a>
        <a href="/about/">About</a>
      </nav>
    </div>
  </header>

  <main id="content">
        {{ content | safe }}
      </main>

    {# ensure ASIDE renders before FOOTER #}
    {% if aside %}
      <aside class="site-aside">
          {{ aside | safe }}
        </aside>
      {% endif %}

    <footer class="site-footer">
    <div class="container footer-inner">
      <p>Â© <span id="year"></span> {{ site.name }}. All rights reserved.</p>
      <div class="social">
        {% if site.social.x %}<a href="{{ site.social.x }}" aria-label="X / Twitter">X</a>{% endif %}
        {% if site.social.github %}<a href="{{ site.social.github }}" aria-label="GitHub">GitHub</a>{% endif %}
        {% if site.social.linkedin %}<a href="{{ site.social.linkedin }}" aria-label="LinkedIn">LinkedIn</a>{% endif %}
      </div>
    </div>
  </footer>

  <script>
    const y = document.getElementById('year');
    if (y) y.textContent = new Date().getFullYear();
  </script>
</body>
</html>
