  <style>
    /* Align base layout visuals with splash layout */
    html, body { height:100%; overflow:auto; }
    body { background: var(--bg); }

    #stage {
      position: relative;
      min-height: 100svh;
      width: 100%;
      display: grid;
      place-items: center;
      padding: clamp(16px, 3vw, 28px);
      isolation: isolate;
    }
    #stage::before, #stage::after {
      content:"";
      position: absolute; inset: 0;
      z-index: -2;
      background:
        radial-gradient(120rem 120rem at 20% 10%, color-mix(in srgb, var(--accent), transparent 70%), transparent 65%),
        radial-gradient(100rem 100rem at 85% 15%, color-mix(in srgb, var(--secondary), transparent 70%), transparent 68%),
        radial-gradient(90rem 90rem at 50% 100%, color-mix(in srgb, var(--accent), white 20%), transparent 72%);
      filter: saturate(120%);
      opacity: .85;
    }
    #stage::after { z-index: -1; backdrop-filter: saturate(160%) blur(8px); }

    .panel {
      width: min(100%, 1120px);
      height: auto;
      display: grid;
      grid-template-columns: 1fr;
      grid-auto-rows: auto;
      grid-template-areas:
        "aside"
        "hero";
      gap: clamp(16px, 2.6vw, 28px);
      padding: clamp(16px, 3vw, 28px);
      border-radius: 24px;
      background: color-mix(in srgb, var(--surface), white 6%);
      border: 1px solid var(--border);
      box-shadow: var(--shadow);
      overflow: visible;
    }
    @media (min-width: 880px) and (max-height: 1080px) {
      .panel {
        max-height: calc(90svh - clamp(24px, 6vw, 48px) * 2);
        min-height: 420px;
        height: auto;
        overflow: auto;
      }
    }
    @media (min-width: 880px) {
      .panel {
        max-height: calc(55svh - clamp(24px, 6vw, 48px) * 2);
        min-height: 420px;
        height: auto;
        overflow: auto;
        grid-template-columns: minmax(0, 1.1fr) minmax(0, .9fr);
        grid-template-areas: "hero aside";
        align-items: stretch;
      }
      .hero, .aside { min-width: 0; }
      .aside { justify-self: stretch; width: min(100%, 520px); aspect-ratio: 4 / 3; display: grid; place-items: start center; padding: clamp(8px, 1.2vw, 16px); }
      #logo { width: 100%; height: auto; max-width: 100%; max-height: 100%; object-fit: contain; }
    }

    .hero { display:grid; gap:.6rem; grid-template-rows: 1fr auto; align-content:stretch; grid-area: hero; }
    .aside { grid-area: aside; display: grid; place-items: start center; }
  </style>
</head>
